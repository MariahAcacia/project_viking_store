<h4>Product ID: <%= product.id %> </h4>
<%= form_for [:admin, product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :category %>
  <%= f.submit "#{(product.persisted? ? 'Update' : 'Create')} Product", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
