<%= form_for [:admin, user] do |f| %>
  <%= f.label :first_name, "First Name:" %>
  <%= f.text_field :first_name, disabled: true %><br>
  <%= f.label :last_name, "Last Name:" %>
  <%= f.text_field :last_name, disabled: true %><br>
  <% unless current_page?(action: 'show') %>
    <%= f.label :card_number, "Number:" %>
    <%= f.text_field "#"%><br>
    <%= f.label :exp_month, "Experation Month:" %>
    <%= f.text_field "#" %><br>
    <%= f.label :exp_year, "Experation Year:" %>
    <%= f.text_field "#" %><br>
    <%= f.label :ccv, "CCV:" %>
    <%= f.text_field "#" %>
  <% else %>
    <% credit_card %>
    <%= f.label :number, "Number:" %>
    <%= credit_card.card_number %><br>
    <%= f.label :exp_month, "Expiration Month:" %>
    <%= credit_card.exp_month %><br>
    <%= f.label :exp_year, "Expiration Year:" %>
    <%= credit_card.exp_year %><br>
    <%= f.label :ccv, "CCV:" %>
    <%= credit_card.ccv %><br>
  <% end %>
  <%= link_to "Remove Card", "#", method: :delete, data: {confirm: "Are you sure you want to remove this card?"} %>
<% end %>
