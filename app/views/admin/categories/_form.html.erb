<%= form_for [:admin, category] do |f| %>
  <%= f.label :category_id, "Category ID" %>
  <%= ( @category.persisted? ? @category.id : "N/A") %><br>
  <%= f.label :name %>
  <%= display_category_form_errors(category, :name) %>
  <%= f.text_field :name, placeholder: "enter category name here" %>
  <%= f.submit "#{(category.persisted? ? 'Update' : 'Create')} Category", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
