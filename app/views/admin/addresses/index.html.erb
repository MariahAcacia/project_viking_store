<h1 class="heading">Addresses</h1>
<p><em>Create new addresses from within <%= link_to "User", "#" %> profiles</em></p>
<table class="table table-striped" id="index-table">
  <thead>
    <th>ID</th>
    <th>User</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Orders</th>
    <th>Created</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  <thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address[:id] %></td>
        <td><%= link_to User.find(address[:user_id])[:first_name], "#" %></td>
        <td><%= address[:street_address] %></td>
        <td><%= City.find(address[:city_id])[:name]%></td>
        <td><%= State.find(address[:state_id])[:name]%></td>
        <td><%= link_to orders_to_this_address(address[:user_id]).nil? ? 0 : orders_to_this_address(address[:user_id]), "#" %></td>
        <td><%= address[:created_at].strftime("%F")%></td>
        <td><%= link_to "show", "#" %></td>
        <td><%= link_to "edit", "#" %></td>
        <td><%= link_to "delete", "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
